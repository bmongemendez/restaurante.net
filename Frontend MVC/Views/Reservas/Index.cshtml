@model IEnumerable<ReservasViewModel>

@{
    ViewData["Title"] = "Reservaciones";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar</a>
</p>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroReserva)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaHora)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCiente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroPersonas)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroReserva)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaHora)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCiente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroPersonas)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.NumeroReserva }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.NumeroReserva }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning d-flex align-items-center mt-3" role="alert">
        <div>
            No se encontraron registros.
        </div>
    </div>
}

